    "express": "^4.17.1",
    "mongoose": "^5.8.7"
  },
  "devDependencies": {
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0"
  }
}
