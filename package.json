{
  "name": "todos_api",
  "version": "1.0.0",
  "description": "Todo list using express mongo and node",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "devstart": "nodemon index.js",
